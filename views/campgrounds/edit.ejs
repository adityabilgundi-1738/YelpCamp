<% layout('layouts/boilerplate') %>
    <h2>Edit Campground</h2>
    <br>
    <form action="/campgrounds/<%= camp._id %>?_method=PATCH" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" name="campground[title]" id="title" placeholder="title" value="<%= camp.title %> ">
        </div>
        <div>
            <label for="price">Price:</label>
            <input type="text" name="campground[price]" id="price" placeholder="price" value="<%= camp.price %> ">
        </div>
        <div>
            <label for="description">Description:</label>
            <input type="text" name="campground[description]" id="description" placeholder="description"
                value="<%= camp.description %> ">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" name="campground[location]" id="location" placeholder="location"
                value="<%= camp.location %> ">
        </div>
        <br>
        <button>Save</button>
    </form>
    <br>