<% layout('layouts/boilerplate') %> 
<h2>Add a Campground</h2>
<br>
<form action="/campgrounds" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" name="campground[title]" id="title" placeholder="title">
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="text" name="campground[price]" id="price" placeholder="price">
    </div>
    <div>
        <label for="description">Description:</label>
        <input type="text" name="campground[description]" id="description" placeholder="description">
    </div>
    <div>
        <label for="location">Location: </label>
        <input type="text" name="campground[location]" id="location" placeholder="location">
    </div>
    <button>Add Campground</button>
</form>
<br>
<a href="/campgrounds">All Campgrounds</a>